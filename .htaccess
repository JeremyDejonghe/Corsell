#Activation du module de réécriture d'url :
RewriteEngine on

# Règle de réécriture d'url :
RewriteRule ^categories$ ./index.php?page=categories
RewriteRule ^categorydetail$ ./index.php?page=categorydetail
RewriteRule ^categorydetail&([0-9]+)$ ./index.php?page=categorydetail&id=$1
RewriteRule ^subcategorydetail&([0-9]+)$ ./index.php?page=subcategorydetail&id=$1
RewriteRule ^product&([0-9]+)$ ./index.php?page=product&id=$1
RewriteRule ^coco$ ./coco.php
RewriteRule ^snap-ship$ ./snap-ship.php
RewriteRule ^faceborgne$ ./faceborgne.php
RewriteRule ^brands$ ./index.php?page=brands
RewriteRule ^bestsells$ ./index.php?page=bestsells
RewriteRule ^lastnew$ ./index.php?page=lastnew
RewriteRule ^registration$ ./index.php?page=registration

RewriteRule ^brands$ ./index.php?page=brands
RewriteRule ^brands&([0-9]+)$ ./index.php?page=branddetail&id=$1
RewriteRule ^essentials$ ./index.php?page=essentials
RewriteRule ^connexion$ ./index.php?page=connexion
RewriteRule ^construction$ ./construct.php